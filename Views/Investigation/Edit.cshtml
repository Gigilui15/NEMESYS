@model EditInvestigationViewModel

@{
    ViewData["Title"] = "Create Investigation";
}

<h2 class="text-light">Edit Report</h2>

<form asp-action="Edit" method="post" role="form" enctype="multipart/form-data">
    <div asp-validation-summary="All" class="text-danger"></div>

    <div class="form-group">
        <label asp-for="Content" class="col-md-2"></label>
        <div class="col-md-5">
            <textarea asp-for="Content" class="form-control"></textarea>
            <span asp-validation-for="Content" class="text-danger"></span>
        </div>
        <div class="form-group">
            <div class="col-md-5 mt-3">
                <input type="submit" class="btn btn-primary" value="Update investigation" />
                <a asp-controller="Investigation" asp-action="Details" asp-route-id="@Model.Id" class="btn btn-outline-secondary">Back to Investigation</a>
            </div>
        </div>
    </div>

</form>

<div class="mt-3">
    <a asp-controller="Investigation" asp-action="Index" class="btn btn-outline-secondary">Back to List</a>
</div>

@*Inject JQuery validation scripts in Layout*@
@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
    }
